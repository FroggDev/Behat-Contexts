{
    "name": "froggdev/behat-contexts",
    "description": "Easy Behat installation with new features and multiple reports options.",
		"keywords": ["symfony", "framework", "behat", "bdd", "frogg"],
		"minimum-stability": "dev",
    "authors": [
        {
            "name": "Marsiglietti Remy",
            "email": "admin@frogg.fr"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-zip": "*",
        "behat/behat": "dev-master",
        "behat/mink": "dev-master",
        "behat/mink-extension": "dev-master",
        "emuse/behat-html-formatter": "dev-master",
				"behat/symfony2-extension": "dev-master",
				"behat/mink-selenium2-driver": "dev-master",
				"behat/mink-goutte-driver": "dev-master",
				"slowprog/composer-copy-file": "~0.3"				
    },
    "autoload": {
        "psr-4": {
            "froggdev\\BehatContexts\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "SlowProg\\CopyFile\\ScriptHandler::copy"
        ],
        "post-update-cmd": [
            "SlowProg\\CopyFile\\ScriptHandler::copy"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.0-dev"
        },
        "copy-file": {
            "vendor/froggdev/behat-contexts/recipes/1.0.0/features/": "features/",
						"vendor/froggdev/behat-contexts/recipes/1.0.0/behat.yml.dist/": "behat.yml.dist"
        }
    }
}
